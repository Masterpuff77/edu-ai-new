# Netlify Headers Configuration for PWA
# Optimizes caching for Progressive Web App functionality

# Service Worker - No cache to ensure updates propagate immediately
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Workbox Service Worker
/workbox-*.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Main HTML file - No cache to ensure updates propagate
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Offline fallback page - Short cache
/offline.html
  Cache-Control: public, max-age=3600
  Expires: 3600

# PWA Manifest - Short cache to allow updates
/manifest.webmanifest
  Cache-Control: public, max-age=3600
  Content-Type: application/manifest+json

# PWA Icons - Long cache with immutable flag
/pwa-*.png
  Cache-Control: public, max-age=31536000, immutable
  Expires: 31536000

/apple-touch-icon.png
  Cache-Control: public, max-age=31536000, immutable
  Expires: 31536000

# Static assets with hash - Long cache with immutable flag
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Expires: 31536000

# Fonts - Long cache
*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Expires: 31536000

*.woff
  Cache-Control: public, max-age=31536000, immutable
  Expires: 31536000

# Images - Medium cache
*.jpg
  Cache-Control: public, max-age=2592000
  Expires: 2592000

*.jpeg
  Cache-Control: public, max-age=2592000
  Expires: 2592000

*.png
  Cache-Control: public, max-age=2592000
  Expires: 2592000

*.svg
  Cache-Control: public, max-age=2592000
  Expires: 2592000

*.webp
  Cache-Control: public, max-age=2592000
  Expires: 2592000

# API routes - No cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Security headers for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()